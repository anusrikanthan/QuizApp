<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:background="@drawable/bg"
    android:layout_gravity="center"

    android:padding="30dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="@drawable/layout_bg"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp" android:text="Edit Profile"
            android:textColor="#000000"
            android:textSize="35dp"
            app:fontFamily="@font/roboto_thin"></TextView>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:text="Name"
                android:textAllCaps="false"></TextView>

            <TextView
                android:id="@+id/namedisp1"
                android:layout_width="190dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/textviewrounded"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"

                android:text="E-mail"
                android:textAllCaps="false"></TextView>

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:id="@+id/emaildisp1"
                android:textAlignment="center"
                android:background="@drawable/textviewrounded"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"

                android:text="Degree"
                android:textAllCaps="false"></TextView>

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginLeft="50dp"
                android:id="@+id/degreedisp1"
                android:background="@drawable/textviewrounded"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"

                android:text="Branch"
                android:textAllCaps="false"></TextView>

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textAlignment="center"
                android:id="@+id/branchdisp1"
                android:background="@drawable/textviewrounded"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="12dp"
                android:text="Phone No"
                android:textAllCaps="false"></TextView>

            <EditText
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:id="@+id/phonedisp1"
                android:textAlignment="center"
                android:background="@drawable/textviewrounded"></EditText>
        </LinearLayout>








        <Button
            android:id="@+id/update"
            android:layout_width="100dp"
            android:layout_height="30dp"


            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:background="@drawable/roundedbutton"
            android:hint="Update"></Button>


    </LinearLayout>





</LinearLayout>